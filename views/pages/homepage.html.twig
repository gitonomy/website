{% extends "layout.html.twig" %}

{% block title "Gitonomy - Git repositories inside your infrastructure" %}

{% block before_body_end %}
    <script type="text/javascript">
        $(document).ready(function (){
            $("body").keydown(function(e) {
              if(e.keyCode == 37) {
                $("#carousel-sshot").carousel('prev');
              } else if(e.keyCode == 39) {
                $("#carousel-sshot").carousel('next');
              }
            });
        });
    </script>
{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>
            Gitonomy
            <small>
                Git repositories inside your infrastructure
                <a style="float: right" class="btn btn-primary" href="http://github.com/gitonomy/gitonomy">View on Github</a>
            </small>
        </h1>
    </div>
    {% include "blocks/homepage_carousel.html.twig" %}
    {% include "blocks/homepage_footer.html.twig" %}
{% endblock %}
